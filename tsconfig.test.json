{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs"
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.js",
    "jest.d.ts"
  ],
  "exclude": ["node_modules"]
}
