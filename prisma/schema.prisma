generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modelo para el inventario
model InventoryItem {
  id                String   @id @default(uuid())
  name              String
  quantity          Int
  purchasePrice     Int
  description       String?
  sku               String?  @unique
  supplier          String?
  size              String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("inventory_items")
}

